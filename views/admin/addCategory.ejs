<script>
    function catValidate() {
        const name = document.getElementById("prName").value;
        const description = document.getElementById("prDescription").value;
        if (name.trim() === "" || description.trim() === "") {
            document.getElementById("formAlert").style.display = "block"
            setTimeout(() => {
                document.getElementById("formAlert").style.display = "none"
            }, 2000);
        } else if (name.length <= 3) {
            document.getElementById("minName").style.display = "block"
            setTimeout(() => {
                document.getElementById("minName").style.display = "none"
            }, 2000);
        } else if (name.length >= 15) {
            document.getElementById("maxName").style.display = "block"
            setTimeout(() => {
                document.getElementById("maxName").style.display = "none"
            }, 2000);
        } else if (!/^[A-Za-z& ]+$/.test(name)) {
            document.getElementById("nameregex").style.display = "block"
            setTimeout(() => {
                document.getElementById("nameregex").style.display = "none"
            }, 2000);
        } else if (description.length <= 10) {
            document.getElementById("minDescription").style.display = "block"
            setTimeout(() => {
                document.getElementById("minDescription").style.display = "none"
            }, 2000);
        } else if (description.length >= 100) {
            document.getElementById("maxDescription").style.display = "block"
            setTimeout(() => {
                document.getElementById("maxDescription").style.display = "none"
            }, 2000);
        } else {
            $.ajax({
                url: "/admin/categoryAdd",
                method: "post",
                data: {
                    name,
                    description
                },
                success: (response) => {
                    if (response.status === true) {
                        Swal.fire({
                            icon: "success",
                            title: "Your work has been saved",
                            showConfirmButton: false,
                            timer: 1500
                        });
                        setTimeout(() => {
                            window.location.href = "http://localhost:5000/admin/category";
                        }, 1500);   
                    } else {
                        document.getElementById("alreadyexist").style.display = "block";
                        setTimeout(() => {
                            document.getElementById("alreadyexist").style.display = "none";
                        }, 2000);
                    }
                }
            })
        }
    }

    function unblock(id) {
        const userMail = id;
        Swal.fire({
            title: "Are you sure?",
            text: "You want to unlist this category",
            showCancelButton: true,
            confirmButtonColor: "#000000",
            cancelButtonColor: "#d33",
            confirmButtonText: "Confirm"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/UnblockCategory?_id=${id}`
            }
        });
    }

    function block(id) {
        const userMail = id;
        Swal.fire({
            title: "Are you sure?",
            text: "You want to list this category",
            showCancelButton: true,
            confirmButtonColor: "#000000",
            cancelButtonColor: "#d33",
            confirmButtonText: "Confirm"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/blockCategory?_id=${id}`
            }
        });
    }
