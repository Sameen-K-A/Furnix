        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title fw-bold" style="margin: auto;">Order detail</h2>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row m mt-20 order-info-wrap">
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle" style="background-color: lightgray;">
                                    <i class="text-dark material-icons md-person"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Customer</h6>
                                    <p class="mb-1">
                                        <%= orderDetails.address.name %>
                                    </p>
                                </div>
                            </article>
                        </div> <!-- col// -->
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle" style="background-color: lightgray;">
                                    <i class="text-dark material-icons md-local_shipping"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Order info</h6>
                                    <p class="mb-1">
                                        <%= orderDetails.paymentMethod %>
                                    </p>
                                </div>
                            </article>
                        </div> <!-- col// -->
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle" style="background-color: lightgray;">
                                    <i class="text-dark material-icons md-place"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Deliver to</h6>
                                    <p class="mb-1">
                                        <%= orderDetails.address.address %> <br>
                                            <%= orderDetails.address.district %>, <%= orderDetails.address.state %>, <%=
                                                        orderDetails.address.pin %><br>
                                                        <%= orderDetails.address.number %>
                                    </p>
                                </div>
                            </article>
                        </div> <!-- col// -->
                    </div> <!-- row // -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead style="background-color: black; color: white;">
                                        <tr>
                                            <th>Product</th>
                                            <th class="text-center">Unit Price</th>
                                            <th class="text-center">Quantity</th>
                                            <th class="text-center">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for( let i=0; i < orderDetails.product.length; i++ ) { %>
                                            <tr class="text-center">
                                                <td class="align-middle">
                                                    <a class="itemside d-flex">
                                                        <div class="left">
                                                            <img src="/uploads/<%= orderDetails.product[i].images[0] %>"
                                                                width="70" height="70" alt="Item">
                                                        </div>
                                                        <div class="info">
                                                            <%= orderDetails.product[i].name %>
                                                        </div>
                                                    </a>
                                                </td>
                                                <td class="align-middle">₹<%= orderDetails.product[i].offerPrice %>.00
                                                </td>
                                                <td class="align-middle">
                                                    <%= orderDetails.product[i].cartQty %>
                                                </td>
                                                <td class="align-middle">₹<%= orderDetails.product[i].offerPrice *
                                                        orderDetails.product[i].cartQty %>.00</td>
                                            </tr>
                                            <% } %>

                                                <tr>
                                                    <td colspan="4">
                                                        <hr>
                                                        <article class="float-end">

                                                            <dl class="dlist">
                                                                <dt>Date:</dt>
                                                                <dd>
                                                                    <%= orderDetails.date %>
                                                                </dd>
                                                            </dl>
                                                            <dl class="dlist">
                                                                <dt>Time:</dt>
                                                                <dd>
                                                                    <%= orderDetails.time %>
                                                                </dd>
                                                            </dl>
                                                            <dl class="dlist">
                                                                <dt>Subtotal:</dt>
                                                                <dd>₹<%= orderDetails.subTotal %>.00</dd>
                                                            </dl>
                                                            


                                                            <% if (orderDetails.deliveredDateTime !== "false") { %>
                                                                <dl class="dlist">
                                                                    <dt>Delivered time:</dt>
                                                                    <dd><%= orderDetails.deliveredDateTime %></dd>
                                                                </dl>
                                                            <% } %>
                                                            <% if (orderDetails.couponCode !== "false") { %>
                                                                <dl class="dlist">
                                                                    <dt>Coupon code:</dt>
                                                                    <dd><%= orderDetails.couponCode %></dd>
                                                                </dl>
                                                            <% } %>
                                                            <% if (orderDetails.couponCode !== "false") { %>
                                                                <dl class="dlist">
                                                                    <dt>Coupon discount price:</dt>
                                                                    <dd>₹<%= orderDetails.couponOffer %>.00</dd>
                                                                </dl>
                                                            <% } %>


                                                            <dl class="dlist">
                                                                <dt>Shipping cost:</dt>
                                                                <dd>₹<%= orderDetails.deliveryCharge %>.00</dd>
                                                            </dl>
                                                            <dl class="dlist">
                                                                <dt>Grand total:</dt>
                                                                <dd> <b class="h5">₹<%= orderDetails.total %>.00</b>
                                                                </dd>
                                                            </dl>
                                                        </article>
                                                    </td>
                                                </tr>
                                                <% if (orderDetails.status !="Cancelled" &&  orderDetails.status !="Delivered" && orderDetails.status !="Return order cancel" && orderDetails.status !="Returned order recieved" && orderDetails.status !="Payment failed") { %>
                                                    <tr>
                                                        <td colspan="4">
                                                            <hr>
                                                            <div class="row justify-content-end">
                                                                <div class="col-md-6 text-end" style="gap: 10px;">
                                                                    <select
                                                                        class="form-select d-inline-block mb-lg-0 mb-15 mw-200"
                                                                        id="statusChanger">
                                                                        <% if (orderDetails.status === "Return order processing" ||  orderDetails.status === "Returned order recieved") { %>
                                                                            <option>
                                                                                <%= orderDetails.status %>
                                                                            </option>
                                                                            <option>Returned order recieved</option>
                                                                            <option>Return order cancel</option>
                                                                        <% } else { %>
                                                                            <option>
                                                                                <%= orderDetails.status %>
                                                                            </option>
                                                                            <option>Ordered</option>
                                                                            <option>Shipped</option>
                                                                            <option>Delivered</option>
                                                                            <option>Cancelled</option>
                                                                        <% } %>
                                                                    </select>
                                                                    <article class="float-end">
                                                                        <a class="btn savebtn"
                                                                            onclick="changeStatus('<%= orderDetails._id %>')">Save</a>
                                                                    </article>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <hr>
                                                    <% } %>
                                    </tbody>
                                </table>
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>
