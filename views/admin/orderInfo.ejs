        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>

<script>
    function changeStatus(id) {
        const value = document.getElementById("statusChanger").value;
        Swal.fire({
            title: "Are you sure?",
            text: `You want to change order status to ${value}?`,
            showCancelButton: true,
            confirmButtonColor: "#000000",
            cancelButtonColor: "#d33",
            confirmButtonText: "Change"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/admin/changeStatus",
                    method: "post",
                    data: {
                        id,
                        value
                    },
                    success: (response) => {
                        if (response.status === "nochange") {
                            Swal.fire({
                                icon: "error",
                                iconColor: "#ff0000",
                                title: `Order status already ${value}`,
                                showConfirmButton: false,
                                customClass: {
                                    popup: 'swal-custom',
                                },
                                timer: 1500
                            });
                        } else if (response.status === "okay") {
                            Swal.fire({
                                icon: "success",
                                title: `Order status changed to ${value}`,
                                showConfirmButton: false,
                                timer: 1500
                            });
                            setTimeout(() => {
                                window.location.reload();
                            }, 1500);
                        }
                    }
                })
            }
        });
    }
</script>

