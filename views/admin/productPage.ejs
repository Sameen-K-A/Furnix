    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <title>FURNIX Admin</title>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/admin-assets/imgs/theme/favicon-16x16.png">
    <link href="/admin-assets/css/main.css" rel="stylesheet" type="text/css" />
</head>
<style>
    .custom-button {
        width: 100px;
        height: 40px;
        padding: 5px;
        background-color: rgb(0, 0, 0);
        color: rgb(255, 255, 255);
        font-size: 14px;
        border-radius: 50px;
    }

    .unlist-btn {
        width: 100px;
        height: 40px;
        padding: 5px;
        background-color: rgb(255, 255, 255);
        color: rgb(0, 0, 0);
        font-size: 14px;
        border-radius: 50px;
        border-color: rgb(255, 0, 0);
    }
    .list-btn {
        width: 100px;
        height: 40px;
        padding: 5px;
        background-color: rgb(255, 255, 255);
        color: rgb(0, 0, 0);
        font-size: 14px;
        border-radius: 50px;
        border-color: rgb(0, 210, 105);
    }
</style>
<body>
    <div id="bottom-bar" style="z-index: 9999;" class="col-lg-6 col-md-10 col-sm-12 col-12">
        <div class="bottom-bar-element">
            <a href="/admin/adminHome">
                <i class="icon material-icons md-home"></i><br>
                <span>Home</span>
            </a>
        </div>
        <div class="bottom-bar-element">
            <a href="/admin/adminUserList">
                <i class="icon material-icons md-person"></i><br>
                <span>Users</span>
            </a>
        </div>
        <div class="bottom-bar-element">
            <a href="/admin/category">
                <i class="icon material-icons md-shopping_bag"></i><br>
                <span>Category</span>
            </a>
        </div>
        <div class="bottom-bar-element"  style="color: white;">
            <a href="/admin/productPage">
                <i class="icon material-icons md-stars"></i><br>
                <span>Product</span>
            </a>
        </div>
        <div class="bottom-bar-element">
            <a href="/admin/order">
                <i class="icon material-icons md-shopping_cart"></i><br>
                <span>Orders</span>
            </a>
        </div>
        <div class="bottom-bar-element">
            <a href="/admin/coupon">
                <i class="icon material-icons md-local_offer"></i><br>
                <span>Coupons</span>
            </a>
        </div>
        <div class="bottom-bar-element">
            <a href="/admin/salesreport">
                <i class="icon material-icons md-monetization_on"></i><br>
                <span>Sales report</span>
            </a>
        </div>
    </div>
    <!-- <main class="main-wrap"> -->
        <header class="main-header navbar">
            <div class="col-search"> 
                <img src="/admin-assets/imgs/theme/logo.png" class="logo" alt="Furnix Dashboard" width="100" height="auto">
            </div>
            <div class="col-nav">
                <ul class="nav">
                    <li class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown"id="dropdownAccount"
                            aria-expanded="false"> <img class="img-xs rounded-circle"
                                src="/admin-assets/imgs/people/profile.jpg" alt="User"></a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount">
                            <a class="dropdown-item text-danger" href="/admin/adminLogout"><i class="material-icons md-exit_to_app"></i>Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>
        <section class="content-main">
            <div class="content-header">
                <div style="margin: auto;">
                    <h2 class="content-title card-title">Products</h2>
                </div>
                <div>
                    <a href="/admin/addProduct"><button class="custom-button">Create New</button></a>
                </div>
            </div>
            <div class="row" style="margin-top: 50px; margin-bottom: 50px;">
                <% if (product) { %>
                    <% for( let i = 0; i < product.length; i++ ) { %>
                        <div class="col-xl-3 col-lg-4 col-md-6">
                            <div class="card card-product-grid">
                                <a href="/admin/productinfo?id=<%= product[i]._id %>"><img src="/uploads/<%= product[i].images[0] %>" alt="Product"></a>
                                <div class="info-wrap">
                                    <a href="#" class="title"><%= product[i].name %></a>
                                    <div class="price mt-1 d-flex">
                                        ₹<%= product[i].offerPrice.toFixed(2) %>
                                         &nbsp;&nbsp;&nbsp;&nbsp; <span style="color: rgb(255, 0, 0); font-size: 13px; text-decoration: line-through;">₹<%= product[i].regularPrice.toFixed(2) %></span>
                                    </div>
                                    <div class="price mt-1 d-flex">
                                        <span style="color: rgb(130, 130, 130);"><%= product[i].offerPercentage%>% off</span>
                                    </div>
                                </div>
                                <div class="d-flex gap-2 mb-15" style="margin: auto;">
                                    <a href="/admin/editproduct?id=<%= product[i]._id %>">
                                        <button type="submit" class="custom-button">Edit</button>
                                    </a>
                                    <% if (product[i].isBlocked === false) { %>
                                        <button class="unlist-btn" onclick="unblock('<%= product[i]._id %>')">Unlist</button>
                                    <% } else { %>
                                        <button class="list-btn" onclick="block('<%= product[i]._id %>')">List</button>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </section>
    <!-- </main> -->
    <script src="/admin-assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/admin-assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/admin-assets/js/vendors/select2.min.js"></script>
    <script src="/admin-assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="/admin-assets/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="/admin-assets/js/main.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
<script>
    function unblock(email) {
        const userMail = email;
        Swal.fire({
            title: "Are you sure?",
            text: "You want to unlist this product",
            showCancelButton: true,
            confirmButtonColor: "#000000",
            cancelButtonColor: "#d33",
            confirmButtonText: "Confirm"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/unlistproduct?id=${userMail}`
            }
        });
    }

    function block(email) {
        const userMail = email;
        Swal.fire({
            title: "Are you sure?",
            text: "You want to list this product",
            showCancelButton: true,
            confirmButtonColor: "#000000",
            cancelButtonColor: "#d33",
            confirmButtonText: "Confirm"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/listproduct?id=${userMail}`
            }
        });
    }
</script>
</html>