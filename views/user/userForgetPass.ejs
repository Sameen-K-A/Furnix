<script>
	function forgetvalidation() {
		const forgetemail = document.getElementById("forgetemail").value;
		const forgetpassword = document.getElementById("forgetpassword").value;
		const forgetconfpassword = document.getElementById("forgetconfpassword").value;
		if (forgetemail.trim() === "" || forgetpassword.trim() === "" || forgetconfpassword.trim() === "") {
			document.getElementById("formAlert").style.display = "block"
			setTimeout(() => {
				document.getElementById("formAlert").style.display = "none"
			}, 2000);
		} else {
			$.ajax({
				url: "/userForgetPasswordpost",
				method: "post",
				data: {
					forgetemail,
					forgetpassword,
					forgetconfpassword
				},
				success: (response) => {
					if (response.status === true) {
						window.location.href = "/userForgetOTP"
					}
					else if (response.status === "gmailnotfound") {
						document.getElementById("gmailnotfound").style.display = "block";
						setTimeout(() => {
							document.getElementById("gmailnotfound").style.display = "none";
						}, 2000);
					}
					else if(response.status === "passlength"){
						document.getElementById("passlength").style.display = "block";
						setTimeout(() => {
							document.getElementById("passlength").style.display = "none"
						}, 2000);
					}
					else if(response.status === "passwrong"){
						document.getElementById("passwrong").style.display = "block";
						setTimeout(() => {
							document.getElementById("passwrong").style.display = "none"
						}, 2000);
					}
				}
			})
		}
	};
</script>

