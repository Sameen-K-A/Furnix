	<script>
		document.getElementById("registerOTPform").addEventListener('submit', function (event) {
		if (validation()) {
			event.preventDefault()
		}
	})

	function validation() {
		let valid = false;

		const registerOTP = document.getElementById("registerOTP").value;
		if (registerOTP.trim() === "") {
			document.getElementById("formAlert").style.display = "block"
			setTimeout(() => {
				document.getElementById("formAlert").style.display = "none"
			}, 3000);
			valid = true;
		}
		return valid;
	}



	function updateCountdown() {
        var countdownElement = document.getElementById('countdown');
        var time = countdownElement.innerText;
        var timeArray = time.split(':');
        var minutes = parseInt(timeArray[0]);
        var seconds = parseInt(timeArray[1]);

        if (seconds === 0) {
            if (minutes === 0) {
                clearInterval(timer);
                document.getElementById('resendLink').style.display = 'block'; // Show the resend link
				document.getElementById('countdown').style.display = "none"
				document.getElementById('resendmessage').style.display = "block"
				document.getElementById('confirmbtn').style.display = "none";
				document.getElementById('enterotp').style.display = "none"
				document.getElementById('registerOTP').style.display = "none"
                return;
            } else {
                minutes--;
            }
        } else {
            seconds--;
        }

        // Add leading zeros if necessary
        var minutesStr = minutes < 10 ? '0' + minutes : minutes;
        var secondsStr = seconds < 10 ? '0' + seconds : seconds;

        countdownElement.innerText = minutesStr + ':' + secondsStr;
    }

    // Call the updateCountdown function every second
    var timer = setInterval(updateCountdown, 1000);


	
	</script>

